<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>

      <form action="/register" method="POST">
        
       

        <div class="form-group">
            <label for="vorname">Vorname</label>
            <input type="vorname" id="vorname" name="vorname" class="form-control" placeholder="Enter Vorname"
              value="<%= typeof vorname != 'undefined' ? vorname : '' %>" />
          </div>

          <div class="form-group">
              <label for="nachname">Nachname</label>
              <input type="nachname" id="nachname" name="nachname" class="form-control" placeholder="Enter Nachname"
                value="<%= typeof nachname != 'undefined' ? nachname : '' %>" />
            </div>

            <div class="form-group">
              
                <div class="nav-item dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Studiengang</a>
                  <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
                    <a class="dropdown-item" href="#">Internationaler Studiengang Medieninformatik</a>
                    <a class="dropdown-item" href="#">Fraueninformatik</a>
                    <a class="dropdown-item" href="#">Technische Informatik</a>
                    <div class="dropdown-divider"></div>
                  
                  </div>
                </div>
                
              </div>


            <div class="form-group">
              <label for="PW">Password</label>
              <input type="password" class="form-control" name = "PW" id="PW" placeholder="password"
              value="<%= typeof PW != 'undefined' ? PW : '' %>">
            </div>

        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>